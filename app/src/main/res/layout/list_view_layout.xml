<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="96dp">

    <ImageView
        android:id="@+id/sightseeing_foto"
        android:padding="4dp"
        android:src="@raw/stephansdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sightseeing_name"
        android:text="Stephansdom"
        android:paddingTop="22dp"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/sightseeing_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sightseeing_infos"
        android:text="Stephansplatz 1010"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/sightseeing_foto"
        android:layout_below="@id/sightseeing_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>